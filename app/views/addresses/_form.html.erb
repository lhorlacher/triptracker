<h1> Address for <%= @location.where %> </h1>

<% if @address.errors.any? %>
	<ul>
		<% @address.errors.full_messages.each do |error| %>
		<li> <%= error %> </li>
	<% end %>
	</ul>
<% end %>

<%= form_for [@trip, @location, @address] do |f| %>
  <%= f.label :street %>
  <%= f.text_field :street, placeholder: '123 Street' %>
<br />

  <%= f.label :city %>
  <%= f.text_field :city %>
<br />

	<%= f.label :state %>
	<%= f.select :state, Address.states %>

<br />

  <%= f.label :country%>
  <%= f.text_field :country%>
<br />

  <%= f.label :zip %>
  <%= f.number_field :zip %>
<br />

  <%= f.hidden_field :location_id, :value => @location.id %>

  <%= f.submit 'Submit', class: 'btn'%>

<% end %>
