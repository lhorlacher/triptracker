<h1> Address for <%= @location.where %> </h1>

<% if @address.errors.any? %>
	<ul>
		<% @address.errors.full_messages.each do |error| %>
		<li> <%= error %> </li>
	<% end %>
	</ul>
<% end %>

<%= form_for [@location, @address] do |f| %>
  <%= f.label :street %>
  <%= f.text_field :street, placeholder: '123 Street' %>
<br />

  <%= f.label :city %>
  <%= f.text_field :city %>
<br />

  <%= f.label :state %>
  <%= f.select :state, ['AK',
			'AL',
			'AR',
			'AZ',
			'CA',
			'CO',
			'CT',
			'DC',
			'DE',
			'FL',
			'GA',
			'HI',
			'IA',
			'ID',
			'IL',
			'IN',
			'KS',
			'KY',
			'LA',
			'MA',
			'MD',
			'ME',
			'MI',
			'MN',
			'MO',
			'MS',
			'MT',
			'NC',
			'ND',
			'NE',
			'NH',
			'NJ',
			'NM',
			'NV',
			'NY',
			'OH',
			'OK',
			'OR',
			'PA',
			'RI',
			'SC',
			'SD',
			'TN',
			'TX',
			'UT',
			'VA',
			'VT',
			'WA',
			'WI',
			'WV',
			'WY'],
			:include_blank => true %>

<br />

  <%= f.label :country%>
  <%= f.text_field :country%>
<br />

  <%= f.label :zip %>
  <%= f.number_field :zip %>
<br />

  <%= f.hidden_field :location_id, :value => @location.id %>

  <%= f.submit %>

<% end %>
