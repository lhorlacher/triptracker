<% if @trip.errors.any? %>
	<ul>
		<% @trip.errors.full_messages.each do |error| %>
		<li> <%= error %> </li>
	<% end %>
	</ul>
<% end %>

<%= form_for @trip do |f| %>
  <%= f.label :name, 'Trip Name'%>
  <%= f.text_field :name, required: true %>

  <br />
  <%= f.label :begin,'Start Date' %>
  <%= f.date_field :begin %>
  <br />
  <%= f.label :end,'End Date' %>
  <%= f.date_field :end %>
  <br />
  <%= f.label :people %>
  <%= f.text_area :people, placeholder: "Who's coming with you?" %>
  <br />
  <%= f.label :image%>
  <%= f.file_field :image%>
  <%= f.submit %>
<%end%>
