<h1> <%= @trip.name %> Destinations</h1>
<p> <%= link_to 'Add New Location', new_trip_location_path(@trip) %> </p>

<% if @locations.empty? %>
	<p> You haven't added any locations to this trip. </p>
<% else %>
	<ul>
		<% @locations.each do |location| %>
			<li>
				<%= link_to "#{location.where}", trip_location_path(@trip, location) %> <br>
				<%= location.address ? (button_to 'Edit Address', edit_location_address_path(location, location.address)) : (button_to 'Add Address', new_location_address_path(location)) %>
				<%= button_to 'Delete Location', trip_location_path(@trip, location), method: :delete %>
			</li>
		<% end %>
	</ul>
<% end %>
